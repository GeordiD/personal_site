---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="m-auto flex flex-col gap-8">
			<div class="flex flex-col items-center gap-8">
				<img
					class="object-cover w-60 h-60 rounded-md aspect-square shadow-lg"
					src="/imgs/headshot_square.jpeg"
				/>
				<div class="flex flex-col gap-2 items-center">
					<p class="text-4xl">
						Hello, I'm <span class="text-accent">Geordi</span>.
					</p>
					<p class="text-3xl text-center">
						I'm a full stack web&nbsp;developer.
					</p>
				</div>
			</div>
			<div>
				<p>
					I care about writing clean code and making sure other developers don't hate working with what I've built.
					Currently, I'm building an AI tool at <a href="https://www.apricothealth.ai/" target="_blank">Apricot</a> 
					that saves home healthcare workers a ton of time on paperwork.
					Check out <a href="/blog">my blog</a> if you want to see how I think about code!
				</p>
			</div>
		</main>
	</body>
</html>
