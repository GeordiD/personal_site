---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('irl')).sort(
  // sorted newest to oldest
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Geordi's IRL Projects" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="flex-grow mx-auto px-8 md:px-12">
      <div class="mb-8 flex flex-col gap-4">
        <h1 class="text-5xl text-center">Real Life Projects</h1>
        <p>
          When I'm not building software, I like to build things (mostly
          furniture) out of wood. It's a great way to express creativity, get
          away from a screen, and build something I can use every day. Here are
          some projects I've completed:
        </p>
        <hr />
      </div>

      <div
        class="grid grid-flow-row gird-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3"
      >
        {
          posts.map((posts) => (
            <div>
              <a
                href={`/irl/${posts.slug}/`}
                class="cursor-pointer flex flex-col gap-2"
              >
                <Image
                  src="/imgs/irl/mothers-day-canvas-frames/front.png"
                  alt="pic"
                  class="w-full"
                  width="100"
                  height="100"
                />
                <p class="text-2xl title hover:text-accent text-text">
                  {posts.data.title}
                </p>
                <p class="-mt-2">
                  <FormattedDate date={posts.data.finishDate} />
                </p>
              </a>
            </div>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
